<p id="notice"><%= notice %></p>

<div class="row">
	
	<div class="col-md-6">
		<%= image_tag @listing.image.url(:medium) %>
		<p>
			<%= link_to 'Edit', edit_listing_path(@listing) %> |
			<%= link_to 'Back', listings_path %>
		</p>
	</div>

	<div class="col-md-6">
		<h1><%= @listing.name %></h1>
		<p><%= @listing.price %></p>
		<p>
		  <strong>Description:</strong>
		  <%= @listing.description %>
		</p>
		
	</div>
</div>